<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.javafx.withFXML.hometask.FXMLAskMeController"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Text text="The instructions : "
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <HBox spacing="10" alignment="bottom_center"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="Get instructions"
                onAction="#showInstructions"/>
    </HBox>

    <Text fx:id="actionShowInstructions"
          GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.halignment="CENTER" GridPane.rowIndex="6"/>


    <HBox spacing="10" alignment="bottom_center"
          GridPane.columnIndex="1" GridPane.rowIndex="8">
        <Button text="question for you"
                onAction="#getQestion"/>
    </HBox>

    <Text fx:id="actionShowQuestion"
          GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.halignment="CENTER" GridPane.rowIndex="10"/>


</GridPane>